# Sequence to increment the Employee, ADDRESS ID
CREATE SEQUENCE VINODH.EMPLOYEE_ID_SEQ
  START WITH 1
  MAXVALUE 9999999999999999999999999999
  MINVALUE 1
  NOCYCLE
  CACHE 20
  NOORDER;
  
CREATE SEQUENCE VINODH.ADDRESS_ID_SEQ
  START WITH 1
  MAXVALUE 9999999999999999999999999999
  MINVALUE 1
  NOCYCLE
  CACHE 20
  NOORDER;  
  
# Table Creation Scripts
CREATE TABLE VINODH.EMPLOYEE
(
  EMP_ID      NUMBER,
  EMP_NAME    VARCHAR2(50 BYTE),
  EMP_PHONE   NUMBER,
  EMP_SALARY  NUMBER,
  EMP_EMAIL   VARCHAR2(50 BYTE),
  EMP_DOB     DATE,
  CONSTRAINT PK_EMPLOYEE PRIMARY KEY (EMP_ID)
);

CREATE TABLE VINODH.ADDRESS
(
  EMP_ID        NUMBER,
  ADDRESS_ID    NUMBER,
  STREET_NAME   VARCHAR2(50 BYTE),
  CITY_NAME     VARCHAR2(50 BYTE),
  STATE_NAME    VARCHAR2(50 BYTE),
  COUNTRY_NAME  VARCHAR2(50 BYTE),
  ZIP_CODE      VARCHAR2(50 BYTE),
  CONSTRAINT PK_ADDRESS PRIMARY KEY  (ADDRESS_ID, EMP_ID),
  CONSTRAINT FK_ADDRESS FOREIGN KEY (EMP_ID) REFERENCES VINODH.EMPLOYEE (EMP_ID)
);
